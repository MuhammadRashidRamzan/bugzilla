<!DOCTYPE html>
<html>
<head>
  <title>BugZilla</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>




<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
<a class="navbar-brand" href= <%= root_path%> >Bug Zilla</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <% if user_signed_in? %>

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
           <li class="nav-item  <%= 'active' if current_page?(root_path) %>">
            <%= link_to "All Projects" , root_path , class: "nav-link " %>
          </li>

          <li class="nav-item  <%= 'active' if current_page?(projectTeam_projects_path) %>">
            <%= link_to "Teams" , projectTeam_projects_path , class: "nav-link " %>
          </li>
         
          <li class="nav-item <%= 'active' if current_page?(new_project_path) %> ">
            <%= link_to "Create project" , new_project_path , class: "nav-link"%>
          </li>
         
        </ul>
         <%= link_to "Log out", destroy_user_session_path, method: "delete" , class: "nav-link "%>
          <%= link_to "Profile", edit_user_registration_path , class: "nav-link "%>
        
      </div>
  <% end %>
</nav>

<br>
<br>


<%= render 'partials/flash' %>

<div class="container">


<%= yield %>

</div>

</body>




</html>
